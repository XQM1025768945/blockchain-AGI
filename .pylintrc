[MASTER]
# 指定Python路径
init-hook='import sys; sys.path.append(".")'

# 加载插件
load-plugins=

# 忽略的文件和目录
ignore=CVS
ignore-patterns=__pycache__

[MESSAGES CONTROL]
# 禁用的检查项
disable=
    C0103,  # invalid-name
    C0111,  # missing-docstring
    C0301,  # line-too-long
    R0903,  # too-few-public-methods
    R0913,  # too-many-arguments
    W0613,  # unused-argument
    W0703,  # broad-except

[FORMAT]
# 代码最大行长度
max-line-length=100

# 函数参数最大数量
max-args=10

# 函数最大局部变量数量
max-locals=20

# 函数最大语句数量
max-statements=50

# 函数最大分支数量
max-branches=20

# 函数最大返回值数量
max-returns=6

# 模块最大公共方法数量
max-public-methods=25

# 类最大属性数量
max-attributes=10

[BASIC]
# 变量名最小长度
variable-rgx=[a-z_][a-z0-9_]{1,30}$

# 常量名格式
const-rgx=(([A-Z_][A-Z0-9_]*)|(__.*__)|(target))$

# 函数名格式
function-rgx=[a-z_][a-z0-9_]{2,40}$

# 类名格式
class-rgx=[A-Z_][a-zA-Z0-9]+$